<%- include('../partials/nav') %>

<main>
    <h1><%= title %></h1>
    <form id="new-form" action="/flights" method="POST">
      <label for="airline-input">Airline:</label>
      <select name="airline" id="airline-select">
        <option value="American">American Airline</option>
        <option value="Southwest">Southwest Airline</option>
        <option value="United">United Airline</option>
      </select>
      <label for="airport">Airport:</label>
      <select name="airport" id="airport-select">
          <option value="AUS">AUS</option>
          <option value="DFW">DFW</option>
          <option value="DEN">DEN</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
      </select>
      <label for="flightNo-input">Flight Number:</label>
      <input required type="number" name="flightNo" id="flightNo-input" min="0" max="9999">
      <label for="departs-input">Departs:</label>
      <input type="datetime-local" name="departs" id="departs-input">
      <button type="submit">Add Flight</button>
    </form>
  </main>


<%- include("../partials/footer") %>